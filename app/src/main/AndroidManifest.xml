<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hopkinsdev.howto" >

    <compatible-screens>
        <screen android:screenSize="large" />
        <screen android:screenSize="xlarge" />
        <screen android:screenSize="normal" />
    </compatible-screens>

    <application
        android:name=".Objects.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/howto"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/howto" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".IngredientsActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name=".InstructionsActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
